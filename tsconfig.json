{
  "compilerOptions": {
    "target": "es2015",
    "lib": [
      "es2016",
      "dom"
    ],
    "experimentalDecorators": true,
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": "src",
    "inlineSourceMap": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "typeRoots": [
      "node_modules/@types",
      "src/@types"
    ]
  },
  "include": [
    "src/**/*"
  ]
}
